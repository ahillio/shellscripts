printf "\nDone syncing bin.\n"

rsync -avvr /home/alec/.ssh/ /media/alec/storage/ssh/
printf "\nDone syncing .ssh.\n"

rsync -avvr /home/alec/.fonts/ /media/alec/storage/fonts/
printf "\nDone syncing .fonts.\n"

