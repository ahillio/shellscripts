cd
git clone git@github.com:ahillio/dotfiles.git
ln -s dotfiles/.xinitrc .xinitrc

apt-get install zsh
chsh -s /bin/zsh
# reboot computer for shell to change
ln -s dotfiles/.zshrc .zshrc
